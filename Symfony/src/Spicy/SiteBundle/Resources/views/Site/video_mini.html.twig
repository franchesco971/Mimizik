<div class="miniApercuVideo">
    <h2>        
        <p class="miniArtisteVideo">
        {% for artiste in video.artistes %}        
            <a href="{{path('spicy_site_artiste_slug',{'id':artiste.id,"slug":artiste.slug})}}">{{artiste.libelle}}</a>
            {% if loop.length==2 and loop.first %}
             &
            {% elseif loop.length>2 and loop.first %}
             ,
            {% elseif loop.last==false %}
             &
            {%endif%}
        {% else %}
            <p>Inconnu</p>
        {% endfor%}
        </p>
        <a href="{{path('spicy_site_video_slug',{"id":video.id,"slug":video.slug})}}">
            <p class="miniTitreVideo">{{video.titre}}</p>
        </a>
    </h2>
    <a href="{{path('spicy_site_video_slug',{"id":video.id,"slug":video.slug})}}">
        <p class="miniImgYoutube" style="background-image:url(http://img.youtube.com/vi/{{video.url}}/0.jpg)"></p>
    </a>
</div>
