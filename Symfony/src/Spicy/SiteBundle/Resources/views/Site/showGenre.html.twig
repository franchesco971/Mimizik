{% extends "SpicySiteBundle::layout.html.twig" %}

{% block title %}
{{ parent() }} : Toute la musique et les vidéos clip {{genre.libelle}}
{% endblock %}

{% block meta_description %}
    <meta name="Description" content="Mimizik te propose toute la musique et les vidéos clip de {{genre.libelle}}."/> 
{% endblock %}

{% block body %}
    {{ parent() }}
    <div id="genre" class="fond_transparent">
        <h2>{{genre.libelle}}</h2>
        <div>
            <p>Nom : {{genre.libelle}}</p>

        </div>
        <div>
             {% for video in videos %}
                {% include "SpicySiteBundle:Site:video_mini.html.twig" %} 
             {%else%}
                <p>Pas de vidéos de cette artiste</p>
             {% endfor %}
        </div>
    </div>
{% endblock %}
