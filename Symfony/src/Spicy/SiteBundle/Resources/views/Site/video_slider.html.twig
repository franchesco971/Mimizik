<li class="slide-480">
    <a href="{{path('spicy_site_video_slug',{"id":video.id,"slug":video.slug})}}">
        <img src="http://img.youtube.com/vi/{{video.url}}/0.jpg" border="0"  />
    </a>
    <div class="ribbon-caption">
        <a class="ribbon-caption-title" href="{{path('spicy_site_video_slug',{"id":video.id,"slug":video.slug})}}">
            <span>
                {% set nbletter=0%}
                {% for artiste in video.artistes %} 
                    {% if nbletter<20 %}
                        {{artiste.libelle}}

                        {%set nbletter=nbletter+artiste.libelle|length%}

                        {% if loop.length==2 and loop.first and nbletter<20%}
                        &
                        {% elseif loop.length>2 and loop.revindex>2 and nbletter<20%}
                        ,
                        {% elseif loop.last==false and nbletter<20%}
                        &
                        {%endif%}
                    {%endif%}

                {% else %}
                    <p>Inconnu</p>
                {% endfor%}
                
                - {{video.titre}}
            </span>
            <span class="ribbon-caption-background"></span>
        </a>
    </div>
</li>
