<div class="post">
    <div class="image floatleft" >
        <a href="{{path('spicy_site_video_slug',{"id":video.id,"slug":video.slug})}}">
            <img alt="" src="http://img.youtube.com/vi/{{video.url}}/0.jpg" width="240" height="180" alt="{{video.titre}} mimizik" />
        </a>
    </div>
    <div class="floatleft infos_video">
        <h3 class="artistes post-title">
        {% set nbletter=0%}
        {% for artiste in video.artistes %} 
            {% if nbletter<20 %}
                <a href="{{path('spicy_site_artiste_slug',{'id':artiste.id,"slug":artiste.slug})}}">{{artiste.libelle}}</a>
                
                {%set nbletter=nbletter+artiste.libelle|length%}
                
                {% if loop.length==2 and loop.first and nbletter<20%}
                &
                {% elseif loop.length>2 and loop.revindex>2 and nbletter<20%}
                ,
                {% elseif loop.last==false and nbletter<20%}
                &
                {%endif%}
            {%endif%}
            
        {% else %}
            <p>Inconnu</p>
        {% endfor%}
        </h3>
        <h4 class="titre">
            <a href="{{path('spicy_site_video_slug',{"id":video.id,"slug":video.slug})}}">
                {{video.titre}}
            </a>
        </h4>
        <p class="description">
            {{video.description| truncate(40, true, '...')}}
        </p>
        <p class="bouton">
            <a class="button small" href="{{path('spicy_site_video_slug',{"id":video.id,"slug":video.slug})}}">
            <span>Plus d'infos</span>
            </a>
        </p>
    </div>

</div>