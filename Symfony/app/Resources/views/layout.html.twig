            <div class="content-block">
                <div class="block-title ">
                    <span class="aligncenter">Connectez-vous</span>
                </div>
                <div class="block-content connection">
                    <div class="row">
                        <div class="col-md-3">
                        </div>
                        <div class="col-md-3">
                            <div class="g-signin2" data-onsuccess="onSignIn"></div>
                        </div>
                        <div class="col-md-3">
                            <a href="#" onclick="signOut();">Sign out</a>
                        </div>
                    </div>
                    <div class="divider row col-md-12"></div>
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="col-md-3 hidden fb-button">
                            <div class="fb-login-button" data-max-rows="1" data-size="large" data-show-faces="false" data-auto-logout-link="true" onlogin="checkLoginState();"></div>
                        </div>
                        <!--<fb:login-button data-max-rows="1" data-size="large" data-show-faces="false" data-auto-logout-link="true" scope="public_profile,email" 
                                         onlogin="checkLoginState();"></fb:login-button>-->
                        <div class="col-md-3">
                            <div id="fb-status"></div>
                        </div>
                    </div>
                    <div class="divider row col-md-12"></div>
                </div>
                
            </div>
            
            <div class="content-block">
                <div class="block-title"><span>Inscription</span></div>
                <div class="block-content registration">
                    <div class="button dark large" style=""><a id="btn_register" style="" href="{{path('fos_user_registration_register')}}"><span>S'inscrire</span></a></div>
                </div>
            </div>
        </div>
        <a class="close-reveal-modal">&#215;</a>
    </div>
    {% block javascripts %}
        <script type="text/javascript" src="{{asset('js/jquery-2.1.1.min.js')}}" ></script>
        <script type="text/javascript" src="{{asset('js/api/fb.js')}}" ></script>
        <script type="text/javascript" src="{{asset('js/api/google.js')}}" ></script>
        <script src="https://apis.google.com/js/platform.js" async defer></script>
        {% javascripts  filter='?yui_js' output='js/compiled/main.js'
            'js/jquery.fadeSlider.js'
            'js/jquery.hoverIntent.min.js'
            'js/jquery.custom.js'
            'js/jquery.pagination.js'
            'js/jquery.reveal.js' 
        %}
            <script type="text/javascript" src="{{ asset_url }}" ></script>
        {% endjavascripts %}       
        <noscript>Your browser does not support JavaScript!</noscript>
        
        <script type="text/javascript">
            
            var url_social_login="{{path('mimizik_user_social_login',{"id":"__id__","type":"__type__","name":"__name__"})}}";
            var is_connected={{is_connected}};
            var fb_login=1;var google_login=2;
            
            //twitter
            !function(d,s,id){
                var js,fjs=d.getElementsByTagName(s)[0];
                if(!d.getElementById(id))
                {js=d.createElement(s);
                    js.id=id;js.src="https://platform.twitter.com/widgets.js";
                    fjs.parentNode.insertBefore(js,fjs);
                }            
            }
            (document,"script","twitter-wjs");
            
            //google
            window.___gcfg = {lang: 'fr'};
            (function() {
              var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
              po.src = 'https://apis.google.com/js/plusone.js';
              var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
            })();
            
            function getLoginForm()
            {
                $.ajax({
                    url: "{{ path('mimizik_user_security_login')}}",
                    context: document.body
                  })
                .done(function(html) {
                    $('#global_modal .block-content.connection').append('<div id="modal_login">'+html+'</div>');
                });
            }

            // When document is ready, initialize pagination
            $(document).ready(function(){           
                
                $.ajax({
                    url: "{{ path('mimizik_genres_menu')}}",
                    context: document.body
                  })
                .done(function(html) {
                    $('#genresMenu').html(html);
                });
                
                $("#modal_connect").click(function(){ 
                    $(".fb-button").show();
                    //$(".loading").show();
                        //$('#modal_hashtag .content').html(data);
                        if($('#global_modal #modal_login').length==0)                           
                        getLoginForm();

                        $('#global_modal').reveal();
                        //$(".loading").hide();   
                    return false;
                });
                
                $('#modal_connect').on('hidden', function () {
                    $(".fb-button").hide();
                });
                
                $(document).on('close.fndtn.reveal', '[data-reveal]', function () {
                    console.log('close');
                });
                
                $("#btn_disconnect").on('click',function(){
                   fb_login.disconnect();
                   //google_plugin.signOut();
                });
            });
        </script>
    {% endblock %}
    
