<form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit form-horizontal">
    {#{ form_widget(form) }#}
    <div class="form-group">
        {{ form_label(form.username, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.username) }}
        <div class="col-sm-9">
        {{ form_widget(form.username) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.email, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.email) }}
        <div class="col-sm-9">
        {{ form_widget(form.email) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.current_password, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.current_password) }}
        <div class="col-sm-9">
        {{ form_widget(form.current_password) }}
        </div>
    </div>
    {{ form_rest(form) }}
    <div>
        <input type="submit" value="{{ 'profile.edit.submit'|trans({}, 'FOSUserBundle') }}" />
    </div>
</form>