    <div id="fb-root"></div>

    {% block modals %}
    <div class="modal fade" id="global_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Connectez-vous</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body connection">
                    <div class="card">
                        <div class="card-header">
                            Tu as déjà un compte
                        </div>
                        <div class="card-body">
                            <div><a href="#" id="google_signin_link"><img src="{{asset('images/login_google_480.png')}}"
                                        alt="login google"></a></div>
                            <div><a href="#" id="fb_signin_link"><img src="{{asset('images/login_fb_480.png')}}"
                                        alt="login facebook"></a></div>
                            <div><a class="btn_register btn btn-dark" href="{{path('fos_user_security_login')}}">Se
                                    connecter avec Mimizik</a></div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header">
                            Inscription
                        </div>
                        <div class="card-body">
                            <div><a class="btn_register btn btn-dark"
                                    href="{{path('fos_user_registration_register')}}">S'inscrire</a></div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                    <!-- <button type="button" class="btn btn-primary">Send message</button> -->
                </div>
            </div>
        </div>
    </div>
    {% endblock %}

