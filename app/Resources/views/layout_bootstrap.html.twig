<body>
    <div id="header">
        {% block header %}
        <div class="dflex header" id="header-top">
            <div class="dflex flex-row" itemscope itemtype="http://schema.org/Organization">
                <div id="logo">
                    <a itemprop="url" href="{{path('spicy_site_homepage')}}">
                        <img src="{{asset('images/logo100rouge.png')}}" alt="Logo mimizik" />
                    </a>
                    <h1 itemprop="name" style="display:none">Mimizik</h1>
                </div>
                <div class="dflex flex-column justify-content-end" id="headers-buttons">
                    <div class="social-links dflex flex-row mb-3">
                        <a title="Flux" class="rss ml-auto" href="http://www.mimizik.com/flux/videos"
                            target="_blank"></a>
                        <a itemprop="sameAs" title="Instagram" class="google"
                            href="https://www.instagram.com/mimizikcom" target="_blank"></a>
                        <a itemprop="sameAs" title="Twitter" class="twitter" href="https://twitter.com/mimizikcom"
                            target="_blank"></a>
                        <a itemprop="sameAs" title="Youtube" class="youtube"
                            href="https://www.youtube.com/user/mimizikcom" target="_blank"></a>
                        <a itemprop="sameAs" title="Facebook" class="facebook"
                            href="https://www.facebook.com/mimizikcom" target="_blank"></a>
                    </div>
                    {% if app.user is not null %}
                    {% if (is_granted('ROLE_CONTRIBUTOR') or is_granted('ROLE_ADMIN')) and is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a class="button btn btn-sm dark large mb-3" role="button" href="{{path('approval_new')}}">SOUMETTRE
                        UNE VIDEO</a>
                    {% endif%}
                    <a class="button btn btn-sm dark large mb-3" role="button"
                        href="{{path('fos_user_security_logout')}}">SE DECONNECTER</a>
                    <div class="message text-right">Hello <b class="text-danger"><a
                                href="{{path('fos_user_profile_show')}}">{{ app.user.username }}</a></b> !!</div>
                    {% else %}
                    <a class="button btn btn-sm dark large mb-3 modal_connect" role="button" href="#"
                        data-toggle="modal" data-target="#global_modal">SE CONNECTER</a>
                    {% endif%}
                </div>
            </div>
        </div>

        <div id="mySidenav" class="sidenav">
            <span href="javascript:void(0)" class="closebtn">&times;</span>
            <a title="Accueil Mimizik" href="{{path('spicy_site_homepage')}}">Accueil</a>
            <a title="Liste des artistes" href="{{path('spicy_site_artistes')}}">Artistes</a>
            <a title="Hashtags" href="{{path('mimizik_hashtag')}}">Hashtags</a>
            <a title="Tops" href="{{path('mimizik_tops')}}">Tops</a>
            <button class="dropdown-btn">Classements
                <i class="fa fa-caret-down"></i>
            </button>
            <div class="dropdown-container">
                <a title="Classements mensuel" href="{{path('mimizik_ranking_index')}}">Mensuel</a>
                <a title="Classements annuel" href="{{path('mimizik_year_ranking_index')}}">Annuel</a>
            </div>
            <a title="Contact" href="{{path('spicy_site_contact')}}">Contact</a>
            <button class="dropdown-btn">Genres
                <i class="fa fa-caret-down"></i>
            </button>
            <div class="dropdown-container" id="sideGenreMenu">
            </div>
            <a class="modal_connect" data-toggle="modal" data-target="#global_modal"><span>Se connecter</span></a>
            <div class="social-links dflex flex-column">
                <div class="dflex">
                    <a title="Facebook"  href="https://www.facebook.com/mimizikcom" target="_blank" class="facebook"></a>
                    <a title="Facebook"  href="https://www.facebook.com/mimizikcom" target="_blank">Facebook</a>
                </div>
                <div class="dflex">
                    <a title="Youtube" class="youtube" href="https://www.youtube.com/user/mimizikcom" target="_blank"></a>
                    <a title="Youtube" href="https://www.youtube.com/user/mimizikcom" target="_blank">Youtube</a>
                </div>
                <div class="dflex">
                    <a title="Twitter" class="twitter" href="https://www.twitter.com/mimizikcom" target="_blank"></a>
                    <a title="Twitter" href="https://www.twitter.com/mimizikcom" target="_blank">Twitter</a>
                </div>
                <div class="dflex">
                    <a title="Instagram" class="google" href="https://www.instagram.com/mimizikcom" target="_blank"></a>
                    <a title="Instagram" href="https://www.instagram.com/mimizikcom" target="_blank">Instagram</a>
                </div>
            </div>
        </div>
        <div class="dflex header" id="header-menu">
            <span id="btnNav">☰ Menu</span>
            <ul class="list-group list-group-horizontal largeur">
                <li class="list-group-item"><a href="{{path('spicy_site_homepage')}}">ACCUEIL</a></li>
                <li class="list-group-item"><a href="{{path('spicy_site_artistes')}}">ARTISTES</a></li>
                <li class="list-group-item dropdownItem dropdown" id="dropdownMenu">
                    <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">GENRES MUSICAUX</button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <!-- menu links -->
                    </div>
                </li>
                <li class="list-group-item"><a href="{{path('mimizik_hashtag')}}">HASHTAGS</a></li>
                <li class="list-group-item"><a href="{{path('mimizik_tops')}}">TOPS</a></li>
                <li class="list-group-item dropdownItem dropdown" id="ddRanking">
                    <button class="btn dropdown-toggle" type="button" id="ddRankingButton" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">CLASSEMENT</button>
                    <div class="dropdown-menu" aria-labelledby="ddRanking">
                        <a class="dropdown-item" title="Classements mensuel"
                            href="{{path('mimizik_ranking_index')}}">Mensuel</a>
                        <a class="dropdown-item" title="Classements annuel"
                            href="{{path('mimizik_year_ranking_index')}}">Annuel</a>
                    </div>
                </li>
                <li class="list-group-item"><a href="{{path('spicy_site_contact')}}">CONTACT</a></li>
            </ul>
        </div>
        {% endblock %}
    </div>
    <div id="body">
        {% block body %}
        {% endblock %}
    </div>
    <div class="footer wrapper" id="footer">
        {% block footer %}
        <div class="background dflex bd-highlight">
            <div class="mr-auto p-1 bd-highlight copyright">Mimizik &copy; {{ "now"|date("Y") }}</div>
            <div class="p-1 bd-highlight"><a title="Accueil Mimizik" href="{{path('spicy_site_homepage')}}">Accueil</a>
            </div>
            <div class="p-1 bd-highlight"><a title="Liste des artistes"
                    href="{{path('spicy_site_artistes')}}">Artistes</a></div>
            <div class="p-1 bd-highlight"><a title="Genres musicaux" href="{{path('spicy_site_genres')}}">Genres
                    musicaux</a></div>
            <div class="p-1 bd-highlight"><a title="Hashtags" href="{{path('mimizik_hashtag')}}">Hashtags</a></div>
            <div class="p-1 bd-highlight"><a title="Tops" href="{{path('mimizik_tops')}}">Tops</a></div>
            <div class="p-1 bd-highlight"><a title="Classements"
                    href="{{path('mimizik_ranking_index')}}">Classements</a></div>
            <div class="p-1 bd-highlight"><a title="Contact" href="{{path('spicy_site_contact')}}">Contact</a></div>
        </div>
        {% endblock %}
